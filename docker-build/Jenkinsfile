pipeline {
 

  agent none 
  stages {
    stage('retrieving artifact') {
             environment {
     
                KUBECONFIG = credentials('kubernetescred')
          }
            agent {
                kubernetes {
                inheritFrom 'kube-2'
                defaultContainer 'alpine'

            }
            
            }
            steps {
       
             copyArtifacts(projectName: 'deploying-in-k8s', filter: 'backend/*.tar.gz');

             // Extract the tar file
             dir('path/to/artifacts') {
             unarchive(mapping: ['*.tar.gz', 'extracted-folder'])
                    }
             sh '''
                    ls -lh 
                        '''
   }
  }
